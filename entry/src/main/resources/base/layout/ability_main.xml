<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <Button
        ohos:id="$+id:btn_implicit_startup"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_xml_button"
        ohos:layout_alignment="left"
        ohos:left_margin="20vp"
        ohos:padding="15vp"
        ohos:text="$string:str_implicit_startup"
        ohos:text_color="#ffffff"
        ohos:text_size="25fp"
        ohos:top_margin="10vp"/>

    <Button
        ohos:id="$+id:btn_explicit_startup"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:bg_xml_button"
        ohos:layout_alignment="left"
        ohos:left_margin="20vp"
        ohos:padding="15vp"
        ohos:text="$string:str_explicit_startup"
        ohos:text_color="white"
        ohos:text_size="25fp"
        ohos:top_margin="10vp"/>
</DirectionalLayout>